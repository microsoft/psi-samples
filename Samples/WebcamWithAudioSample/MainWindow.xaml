<Window x:Class="Microsoft.Psi.Samples.WebcamWithAudioSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Microsoft.Psi.Samples.WebcamWithAudioSample"
        mc:Ignorable="d"
        Title="Webcam with Audio Sample" Width="640" Height="480">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Name="WebCamImg" Source="{Binding Path=Image}" Stretch="Fill" Grid.Row="0" Grid.Column="0"/>
    </Grid>
</Window>