<Window x:Class="Microsoft.Psi.Samples.WebcamWithAudioSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Microsoft.Psi.Samples.WebcamWithAudioSample"
        mc:Ignorable="d"
        Title="Webcam with Audio Sample" Width="640" Height="480" Background="Black">
    <Grid>
        <Image x:Name="image" Stretch="Uniform"/>
        <ProgressBar x:Name="displayLevel" Maximum="20" Height="35" VerticalAlignment="Top" Foreground="Green" Background="Transparent" BorderBrush="Transparent"/>
        <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
            <TextBlock Text="Audio Level: " FontSize="24" Foreground="White" VerticalAlignment="Top"/>
            <TextBlock x:Name="displayText" Text="0.0" FontSize="24" Foreground="White" VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</Window>